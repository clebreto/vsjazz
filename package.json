{
  "name": "vsjazz",
  "displayName": "VsJazz",
  "description": "VsCode extension for Jasmin language support",
  "publisher": "jasmin-lang",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/maximedenes/vsjazz"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jasmin",
        "aliases": [
          "Jasmin"
        ],
        "extensions": [
          ".jazz",
          ".jinc"
        ],
        "configuration": "./jasmin.configuration.json"
      }
    ],
    "configuration": [
      {
        "title": "Jasmin configuration",
        "type": "object",
        "properties": {
          "jasmin.path": {
            "type": "string",
            "default": "",
            "description": "Path to jasmin language server."
          },
          "jasmin.args": {
            "type": "array",
            "default": [],
            "description": "jasmin language server arguments"
          },
          "jasmin.masterFile": {
            "type": "string",
            "default": "",
            "markdownDescription": "Path to the master Jasmin file (compilation entry point). Supports `${workspaceFolder}` variable.",
            "scope": "resource"
          },
          "jasmin.namespacePaths": {
            "type": "object",
            "default": {},
            "markdownDescription": "Mapping of namespace identifiers to filesystem paths. Example: `{\"Common\": \"/path/to/common\", \"Crypto\": \"/path/to/crypto\"}`",
            "scope": "resource",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "jasmin.setMasterFile",
        "title": "Jasmin: Set Master File"
      },
      {
        "command": "jasmin.configureNamespace",
        "title": "Jasmin: Configure Namespace Path"
      },
      {
        "command": "jasmin.showConfiguration",
        "title": "Jasmin: Show Configuration"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "@vscode/vsce": "^2.21.1",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "activationEvents": [
    "workspaceContains:**/*.jazz",
    "workspaceContains:**/*.jinc"
  ]
}
